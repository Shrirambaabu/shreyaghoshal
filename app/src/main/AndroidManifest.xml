<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="srb.com.shreyaghoshal_melodyqueen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/front_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/front_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Home"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfileActivity"
            android:label="Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TwitterActivity"
            android:label="Tweets"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FamilyActivity"
            android:label="Shreya&apos;s Family"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SgDay"
            android:label="@string/shreya_ghoshal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StatueActivity"
            android:label="@string/shreya_ghoshal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BiographyActivity"
            android:label="@string/shreya_ghoshal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CareerActivity"
            android:label="@string/shreya_ghoshal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AwardsActivity"
            android:label="@string/shreya_ghoshal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MusicActivity"
            android:label="Music"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ConectActivity"
            android:label="@string/shreya_ghoshal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyDetailsActivity"
            android:label="@string/shreya_ghoshal"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".BroadcastReceiver.InternetBroadcastReceiver"
            android:enabled="true">
            <intent-filter>
                <action
                    android:name="android.net.conn.CONNECTIVITY_CHANGE"
                    tools:ignore="BatteryLife" />
                <action
                    android:name="android.net.wifi.WIFI_STATE_CHANGED"
                    tools:ignore="BatteryLife" />
                <action
                    android:name="android.net.wifi.STATE_CHANGE"
                    tools:ignore="BatteryLife" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".Utils.MyDialog"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />
        <activity android:name=".WebViewActivity"></activity>
    </application>

</manifest>