<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="srb.com.shreyaghoshal_melodyqueen.SplashScreen">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:src="@drawable/sg_home"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="96dp"
        />

    <com.jetradarmobile.snowfall.SnowfallView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:snowflakesNum="50"
        app:snowflakeAlphaMin="10"
        app:snowflakeAlphaMax="50"
        app:snowflakeAngleMax="5"
        app:snowflakeSizeMin="8dp"
        app:snowflakeSizeMax="32dp"
        app:snowflakeSpeedMin="5"
        app:snowflakeSpeedMax="10"
        app:snowflakesFadingEnabled="true"
        app:snowflakesAlreadyFalling="false"
        app:snowflakeImage="@drawable/hrt"/>


</RelativeLayout>
